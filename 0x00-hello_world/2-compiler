#!/bin/bash

# Check if the CFILE variable is set
if [ -z "$CFILE" ]; then
  echo "CFILE variable is not set. Please set it to the name of the C file."
  exit 1
fi

# Extract the file name without the extension
CFILENAME=$(basename "$CFILE" .c)

# Compile the C file without linking
gcc -c "$CFILE" -o "$CFILENAME.o"

# Check if the compilation was successful
if [ $? -eq 0 ]; then
  echo "Compilation successful: $CFILE -> $CFILENAME.o"
else
  echo "Compilation failed for $CFILE"
fi

